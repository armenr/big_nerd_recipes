<h1>Recipes Admin</h1>

<p><%= link_to 'New Recipe', new_recipe_path %></p>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.description %></td>
        <td>
          <%= link_to 'show', recipe %>
          <%= link_to 'edit', edit_recipe_path(recipe) %>
          <%= link_to 'delete', admin_recipe_path(recipe), method: :delete %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
